<%= error_presenter %>

<%=
  form_for :report, routes.reports_path do
    hidden_field :form_uuid, value: SecureRandom.uuid

    div class: 'col-md-6' do
      div class: "form-group #{ error_class_for(:owner) }" do
        label 'GitHub repo owner', for: :owner, class: 'required'
        text_field :owner, placeholder: 'caspg', class: 'form-control'
      end
    end

    div class: 'col-md-6' do
      div class: "form-group #{ error_class_for(:repo) }" do
        label 'Repo name', for: :repo, class: 'required'
        text_field :repo, placeholder: 'speedup-rb', class: 'form-control'
      end
    end

    div class: 'col-md-12' do
      div class: "form-group #{ error_class_for(:path) }" do
        label :path
        text_field :path, placeholder: 'apps/web/controller (optional)', class: 'form-control'
      end

    end
    div class: 'col-md-12' do
      div class: "form-group #{ error_class_for(:email) }" do
        label :email
        span class: "email-info" do
          'get an email notification when report is ready'
        end
        text_field :email, placeholder: '(optional)', class: 'form-control'
      end
      submit 'Create', class: 'btn form-button', id: 'form-submit'
    end
  end
%>
